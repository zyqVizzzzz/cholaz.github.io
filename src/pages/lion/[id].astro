---
import Home from '../../lion/Story.vue'

export const getStaticPaths = async () => {
  const chapterList = [
  { title: "世界观：儒家种姓制", id: 1 },
  { title: "世界观：名士风潮", id: 2 },
  { title: "前情提要：成名无望的士子", id: 3 },
  { title: "第一章：活云", id: 4 },
  { title: "第二章：钱神狂舞", id: 5 },
  { title: "第三章：寺山水院", id: 6 },
  { title: "第四章：好人吴坦尔", id: 7 },
  { title: "世界观：四夷坊", id: 8 },
  { title: "第五章：恶女花魁", id: 9 },
  { title: "第六章：见龙卸甲", id: 10 },
  { title: "世界观：司天台", id: 11},
  { title: "第七章：破空画影", id: 12},
  { title: "世界观：春深居", id: 13},
  { title: "第八章：月之暗面",id: 14 },
  { title: "后记：未完待续", id: 15 },
  { title: "人物手册", id: 16 },
  { title: "世界观：瞳朦子", id: 17 },
  { title: "世界观：水府流云图", id: 18 },
  { title: "符咒游戏", id: 19 },
]
  // 假设这是你获取博客列表的函数，返回包含博客id的数组
   const paths = chapterList.map((chapter) => {
    return { params: { id: chapter.id }, props: {title: chapter.title} };
  });

  return paths;
};

const {id: idStr} = Astro.params;
const {title} = Astro.props;
const id = parseInt(idStr);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Home id={id} title={title} />
  </body>
</html>
  